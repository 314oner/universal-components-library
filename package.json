{
  "name": "@314oner/universal-components-library",
  "version": "0.0.3",
  "type": "module",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "author": "Alexander Gverdtsiteli",
  "repository": {
    "type": "git",
    "url": "https://github.com/314oner/universal-components-library.git"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run vite:build && npm run npm:build",
    "vite:build": "vite build && tsc  && cp package.json README.md ./dist",
    "npm:build": "NODE_ENV=production babel lib --out-dir dist --copy-files",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prepublishOnly": "rm -rf dist && npm run build",
    "postbuild": "npm pack && tar -xvzf *.tgz && rm -rf package *.tgz"
  },
  "peerDependencies": {
    "react": "16.8 - 18",
    "react-dom": "16.8 - 18"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.5.13",
    "@storybook/addon-essentials": "^7.6.8",
    "@storybook/addon-interactions": "^7.6.8",
    "@storybook/addon-links": "^7.6.8",
    "@storybook/addon-onboarding": "^1.0.10",
    "@storybook/blocks": "^7.6.8",
    "@storybook/builder-webpack5": "^6.5.13",
    "@storybook/manager-webpack5": "^6.5.13",
    "@storybook/node-logger": "^6.5.13",
    "@storybook/preset-create-react-app": "^4.1.2",
    "@storybook/react": "^7.6.8",
    "@storybook/react-vite": "^7.6.8",
    "@storybook/storybook-deployer": "^2.8.16",
    "@storybook/test": "^7.6.8",
    "@storybook/testing-library": "^0.0.13",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "*",
    "@types/node": "*",
    "@types/react": "*",
    "@types/react-dom": "*",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@use-gesture/react": "^10.2.21",
    "@vitejs/plugin-react": "^4.1.1",
    "babel-cli": "^6.26.0",
    "babel-plugin-named-exports-order": "^0.0.2",
    "c8": "^7.12.0",
    "eslint": "^8.53.0",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-css-module-hints": "^1.0.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "glob": "^10.3.10",
    "jsdom": "^20.0.3",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-spring": "^9.5.5",
    "react-test-renderer": "^18.2.0",
    "react-three-fiber": "^6.0.13",
    "react-use-gesture": "^9.1.3",
    "simplebar-react": "^2.4.3",
    "storybook": "^7.6.8",
    "typescript": "*",
    "typings-for-css-modules-loader": "^1.7.0",
    "vite": "^5.0.8",
    "vite-plugin-css-modules": "^0.0.1",
    "vite-plugin-dts": "^3.6.3",
    "vite-plugin-lib-inject-css": "^1.3.0",
    "vite-plugin-svgr": "^4.2.0",
    "vite-tsconfig-paths": "^4.0.3",
    "vitest": "^0.26.2",
    "web-vitals": "^2.1.4",
    "webpack": "^5.74.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "description": "Component library",
  "license": "UNLICENSED"
}