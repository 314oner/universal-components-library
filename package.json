    "prettier": "^3.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remove": "^0.1.5",
    "storybook": "^7.6.11",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "^3.4.1",
